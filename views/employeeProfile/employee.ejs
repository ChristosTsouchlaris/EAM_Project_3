<!doctype html>
<html lang="gr">

<head>
    <link rel="stylesheet" href="/styles/main.css">
    <!-- <link rel="stylesheet" href="/styles/information.css"> -->
    <%- include('../partials/head'); %>
</head>

<body class="d-flex flex-column vh-100 ">
    <div class="container">
        <div class="topMargin20 bottomMargin20">
            <%- include('../partials/navbar'); %>
        </div>

                  <!-- Breadcrumb -->
                  <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="/">Αρχική</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Το προφίλ μου</li>
                    </ol>
                  </nav>
                  <!-- /Breadcrumb -->
            
                  <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                      <div class="card">
                        <div class="card-body">
                          <div class="d-flex flex-column align-items-center text-center">
                            <img src="/assets/images/download.jpeg" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                              <h4><%= currentUser.firstName %> <%= currentUser.lastName %></h4>
                              <p class="text-secondary mb-1">Ιδιωτικός Υπάλληλος</p>
                              <p class="text-muted font-size-sm">Ζωγράφου, Αθήνα</p>
                              <button id="leave-button" class="btn btn-primary  <%= currentUser.permitSpecialPurpose.permited ? "disabled":"" %>">Δήλωση άδειας ειδικού Σκοπού</button>
                      
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Ιστόχωρος</h6>
                            <span class="text-secondary">https://ego.com</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap mt-3">
                              <button class="btn btn-primary" id="btn-employee" style="background-color: rgb(184, 184, 7); width: 100%;">
                                Σελίδα εργαζομένου
                            </button> 
                          </li>
                          
                        </ul>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="card mb-3">
                        <div class="card-body">
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Όνομα</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= currentUser.firstName %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Επίθετο</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= currentUser.lastName %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">e-mail</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= currentUser.email %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Τηλέφωνο</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= currentUser.phone %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">ΑΜΚΑ</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= currentUser.amka %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Διεύθυνση</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              Σταδίου 29, Αθήνα
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row gutters-sm">
                        <% if( currentUser.telework ) {%>
                        <div class="col-sm-6 col-md-5 col-lg-4">
                          <div class="card h-60">
                            <div class="card-body">
                              <h6 class="d-flex align-items-center mb-3">Τηλεργασία</h6>
                              
                              <small>Από</small>
                              <div class="col-sm-9 text-secondary">
                                  <%= currentUser.teleFrom %> 
                              </div>
                              <small>Μέχρι</small>
                              <div class="col-sm-9 text-secondary">
                                <%= currentUser.teleUntil %> 
                              </div>
                            </div>
                          </div>
                        </div>
                        <% } %> 
                        <% if(currentUser.permitSpecialPurpose.permited) {%> 
                        <div class="col-sm-6 col-md-5 col-lg-4">
                          <div class="card h-60">
                            <div class="card-body">
                              <h6 class="d-flex align-items-center mb-3">Άδεια Ειδικού Σκοπού</h6>
                              
                              <small>Από</small>
                              <div class="col-sm-9 text-secondary">
                                <%= currentUser.permitSpecialPurpose.from %> 
                              </div>
                              <small>Μέχρι</small>
                              <div class="col-sm-9 text-secondary">
                                <%= currentUser.permitSpecialPurpose.until %> 
                              </div>
                            </div>
                          </div>
                        </div>
                        <% } %> 
                        <% if(currentUser.suspensionOfContact) {%> 
                        <div class="col-sm-6 col-md-5 col-lg-4">
                          <div class="card h-60">
                            <div class="card-body">
                              <h6 class="d-flex align-items-center mb-3" style="color: red !important;">Αναστολή Σύμβασης</h6>
                              
                              <small>Από</small>
                              <div class="col-sm-9 text-secondary">
                                <%= currentUser.susFrom %> 
                              </div>
                              <small>Μέχρι</small>
                              <div class="col-sm-9 text-secondary">
                                <%= currentUser.susUntil %> 
                              </div>
                            </div>
                          </div>
                        </div>
                        <% } %> 
                      </div>
                    </div>
                  </div>
                </div>
            </div>

            <div style="margin: 10px;"></div>

        <%- include('../partials/footer'); %>


        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
        </script>
        <script src="/scripts/main.js" type="text/javascript"></script>
        <script src="/scripts/employee.js" type="text/javascript"></script>
</body>

</html>