<!doctype html>
<html lang="gr">

<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/information.css">
  <link rel="stylesheet" href="/styles/employer-staff.css">

  <!-- CHRIS & MIKE TEMPORARY CSS 16.01.2021 START -->
